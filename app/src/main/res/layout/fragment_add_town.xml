<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddTownFragment">

    <TextView
        android:id="@+id/titleDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:text="@string/hello_blank_fragment"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:textSize="32sp"
        android:text="Add town to this country" />

    <EditText
        android:id="@+id/town_name_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="210dp"
        android:hint="Country name"
        android:textSize="24dp"/>

    <Button
        android:id="@+id/btn_add_town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"
        android:paddingHorizontal="60dp"
        android:textSize="28dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="280dp"/>

    <Button
        android:id="@+id/btn_show_town_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="towns list"
        android:paddingHorizontal="20dp"
        android:textSize="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="350dp"/>

    <Button
        android:id="@+id/btn_show_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back to countries"
        android:paddingHorizontal="20dp"
        android:textSize="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="410dp"/>

</FrameLayout>